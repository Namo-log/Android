<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="20dp">

    <View
        android:id="@+id/item_group_member_color_view"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/border_round_all_circle"
        android:src="@color/mainOrange"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/item_group_member_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="코코아"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/item_group_member_color_view"
        app:layout_constraintBottom_toBottomOf="@id/item_group_member_color_view"
        app:layout_constraintStart_toEndOf="@id/item_group_member_color_view"
        android:layout_marginEnd="53dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>