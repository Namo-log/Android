<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <import type="com.mongmong.namo.presentation.config.CategoryColor" />
        <variable
            name="diary"
            type="com.mongmong.namo.domain.model.DiarySchedule">
        </variable>
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/diary_content_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="8dp"
            android:elevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <View
                    android:id="@+id/item_diary_category_color_iv"
                    android:layout_width="10dp"
                    android:layout_height="0dp"
                    android:background="@drawable/bg_diary_category_color_view"
                    android:backgroundTint="@{CategoryColor.convertPaletteIdToColorStateList(diary.color)}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_diary_content_view"
                android:paddingStart="14dp"
                android:paddingEnd="16dp"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintStart_toEndOf="@id/item_diary_category_color_iv"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    style="@style/content_bold"
                    android:id="@+id/item_diary_collection_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@{diary.title}"
                    android:maxLines="2"
                    android:ellipsize="end"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    style="@style/subtext_12"
                    android:id="@+id/item_diary_collection_participant_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:paddingStart="12dp"
                    android:paddingVertical="8dp"
                    android:drawableStart="@drawable/ic_participant"
                    android:drawablePadding="2dp"
                    app:layout_constraintBottom_toBottomOf="@id/item_diary_collection_title_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/item_diary_collection_title_tv"/>

                <TextView
                    android:id="@+id/textView"
                    style="@style/subtext_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="약속"
                    android:textColor="@color/text_disable"
                    app:layout_constraintBottom_toBottomOf="@+id/item_diary_collection_participant_tv"
                    app:layout_constraintEnd_toStartOf="@+id/item_diary_collection_participant_tv"
                    app:layout_constraintTop_toTopOf="@+id/item_diary_collection_participant_tv" />

                <TextView
                    style="@style/subtext_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:text="11:00 - 13:00"
                    android:textColor="@color/text_disable"
                    app:layout_constraintBottom_toBottomOf="@+id/item_diary_collection_participant_tv"
                    app:layout_constraintEnd_toStartOf="@+id/textView"
                    app:layout_constraintTop_toTopOf="@+id/item_diary_collection_participant_tv" />

                <TextView
                    style="@style/subtext_14"
                    android:id="@+id/item_diary_content_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:text="@{diary.content}"
                    android:visibility="@{diary.content.length() == 0 || diary.content == null ? View.GONE : View.VISIBLE}"
                    app:layout_constraintTop_toBottomOf="@+id/item_diary_collection_title_tv" />

                <TextView
                    android:id="@+id/view_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/more_view"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@id/item_diary_content_tv"
                    app:layout_constraintTop_toBottomOf="@id/item_diary_content_tv" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/diary_gallery_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/item_diary_content_tv"
                    app:layout_constraintStart_toStartOf="@+id/item_diary_collection_title_tv"
                    app:layout_constraintTop_toBottomOf="@id/view_more"
                    tools:listitem="@layout/item_diary_list_gallery" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>