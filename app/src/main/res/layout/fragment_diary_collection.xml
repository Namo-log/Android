<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.mongmong.namo.presentation.config.FilterState"/>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.mongmong.namo.presentation.ui.diary.DiaryViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            style="@style/content_regular"
            android:id="@+id/diary_collection_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:background="@drawable/bg_diary_tab"
            android:text="@{viewModel.filter.state}"
            android:drawableLeft="@{viewModel.filter == FilterState.NONE ? @drawable/ic_filter : @drawable/ic_filter_active}"
            android:drawablePadding="8dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


        <EditText
            style="@style/search_edit_text"
            android:id="@+id/diary_collection_filter_keyword_et"
            android:hint="@string/diary_filter_keyword_hint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="8dp"
            android:text="@={viewModel.keyword}"
            app:layout_constraintEnd_toStartOf="@+id/diary_collection_filter_search_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/diary_collection_filter" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/search_btn"
            android:id="@+id/diary_collection_filter_search_btn"
            android:layout_width="58dp"
            android:layout_height="30dp"
            android:layout_marginEnd="30dp"
            android:text="@string/diary_filter_search"
            app:layout_constraintBottom_toBottomOf="@id/diary_collection_filter_keyword_et"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/diary_collection_filter_keyword_et" />

        <LinearLayout
            android:id="@+id/diary_collection_empty_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="160dp"
            android:orientation="vertical"
            android:visibility="@{viewModel.isListEmpty ? View.VISIBLE : View.GONE}">
            <ImageView
                android:id="@+id/diary_collection_empty_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_diary_empty"
                android:imageSource="@{viewModel.emptyImageResId}"
                android:layout_gravity="center"/>
            <TextView
                style="@style/content_regular"
                android:id="@+id/diary_collection_empty_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:text="@{viewModel.emptyMessageResId}"
                android:textAlignment="center"
                android:layout_gravity="center" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/diary_collection_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:layout_marginTop="20dp"
            android:visibility="@{!viewModel.isListEmpty ? View.VISIBLE : View.GONE}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/diary_collection_filter_keyword_et"
            tools:listitem="@layout/item_diary_collection"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
