<?xml version="1.0" encoding="utf-8"?><!-- 그룹 다이어리 장소 추가, GroupPlaceEventAdapter -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/remove_view"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:padding="25dp"
        android:background="@color/MainOrange"
        app:tint="@color/white"
        android:src="@drawable/ic_delete_schedule"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/group_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/item_place_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:singleLine="true"
                android:maxLines="1"
                android:minWidth="48dp"
                android:minHeight="32dp"
                android:textColor="@color/textGray"
                android:textSize="17sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/click_money_ly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="총"
                    android:textColor="@color/textGray"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/item_place_money_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="금액 정산"
                    android:textColor="@color/textGray"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/item_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="원"
                    android:textColor="@color/textGray"
                    android:textSize="17sp" />

                <ImageView
                    android:id="@+id/item_place_money_iv"
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_arrow_right_gray"
                    android:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/group_add_gallery_rv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_gallery_list" />

            <LinearLayout
                android:id="@+id/group_gallery_lv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/gallery_background"
                    android:layerType="software"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_gallery" />

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/gallery_background"
                    android:layerType="software"
                    android:scaleType="centerInside" />

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:background="@drawable/gallery_background"
                    android:layerType="software"
                    android:scaleType="centerInside" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>