<?xml version="1.0" encoding="utf-8"?>
<!-- 그룹 다이어리 정산 다이얼로그 구성원, GroupPayMemberRVAdapter-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <CheckBox
        android:id="@+id/item_group_pay_member_checkBox"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:checked="false"
        android:button="@drawable/check_selected"
        android:buttonTint="@color/white"
        android:padding="6dp"
        android:background="@drawable/checkbox_custom"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/item_group_member_name"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="앨리"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:layout_marginStart="7dp"
        android:paddingEnd="10dp"
        app:layout_constraintTop_toTopOf="@id/item_group_pay_member_checkBox"
        app:layout_constraintBottom_toBottomOf="@id/item_group_pay_member_checkBox"
        app:layout_constraintStart_toEndOf="@id/item_group_pay_member_checkBox"
        tools:ignore="RtlSymmetry" />

</androidx.constraintlayout.widget.ConstraintLayout>