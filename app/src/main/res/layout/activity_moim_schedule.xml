<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.mongmong.namo.presentation.utils.PickerConverter"/>
        <import type="com.mongmong.namo.presentation.utils.StringConverter"/>
        <import type="android.view.View"/>
        <import type="android.text.TextUtils"/>
        <variable
            name="viewModel"
            type="com.mongmong.namo.presentation.ui.community.moim.schedule.MoimScheduleViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/schedule_background_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@android:color/transparent">

        <androidx.cardview.widget.CardView
            android:id="@+id/schedule_delete_btn"
            android:layout_width="65dp"
            android:layout_height="70dp"
            android:layout_marginBottom="10dp"
            android:visibility="@{viewModel.schedule.moimScheduleId == 0L ? View.GONE : View.VISIBLE }"
            app:layout_constraintBottom_toTopOf="@id/schedule_container_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="25dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_delete"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/schedule_container_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_bottomsheet_top"
            android:background="@drawable/bg_bottomsheet"
            android:elevation="2dp"
            android:paddingTop="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:id="@+id/dialog_group_schedule_header_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal"
                android:weightSum="8"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/dialog_group_schedule_close_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/close"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/dialog_group_schedule_header_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="@{viewModel.schedule.moimScheduleId == 0L ? @string/moim_schedule_new :  @string/moim_schedule_edit }"
                    tools:text="@string/moim_schedule_new"
                    android:textColor="@color/black"
                    style="@style/content_bold"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/dialog_group_schedule_save_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="@{viewModel.schedule.moimScheduleId == 0L ? View.GONE : View.VISIBLE }"
                    android:text="@string/dialog_save"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textAlignment="viewEnd"/>

            </LinearLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                app:layout_constraintTop_toBottomOf="@id/dialog_group_schedule_header_layout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/dialog_group_schedule_title_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/moim_schedule_title_hint"
                        android:maxLines="1"
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        android:textColorHint="@color/dimed_light"
                        android:background="@color/transparent"
                        android:text="@={viewModel.moimTitle}"
                        android:layout_marginTop="25dp"
                        style="@style/header"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp">

                        <TextView
                            android:id="@+id/dialog_group_schedule_coverImg_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/group_cover_image"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            style="@style/content_bold"/>

                        <TextView
                            android:id="@+id/dialog_group_schedule_alert_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="@string/moim_schedule_coverImage_editable"
                            app:layout_constraintStart_toStartOf="@id/dialog_group_schedule_coverImg_tv"
                            app:layout_constraintTop_toBottomOf="@id/dialog_group_schedule_coverImg_tv"
                            style="@style/content_regular"/>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/dialog_group_schedule_coverImg_cv"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="0dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/dialog_group_schedule_coverImg_tv">

                            <ImageView
                                android:id="@+id/dialog_group_schedule_coverImg_iv"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/ic_group_coverimg_placeholder"/>
                        </androidx.cardview.widget.CardView>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                        android:id="@+id/dialog_group_schedule_start_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/schedule_start"
                            style="@style/content_bold"/>

                        <LinearLayout
                            android:id="@+id/dialog_group_schedule_start_content_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/dialog_group_schedule_start_date_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="110dp"
                                android:text="@{PickerConverter.parseLongToDateText(viewModel.schedule.startLong)}"
                                android:textAlignment="center"
                                tools:text="2022.06.29 (수)"
                                style="@style/content_regular"/>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/main_text"
                                android:layout_marginVertical="2dp"
                                android:layout_marginHorizontal="10dp"/>

                            <TextView
                                android:id="@+id/dialog_group_schedule_start_time_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="80dp"
                                android:text="@{PickerConverter.parseLongToTimeText(viewModel.schedule.startLong)}"
                                android:textAlignment="center"
                                tools:text="12:00 PM"
                                style="@style/content_regular"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/dialog_group_schedule_end_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/schedule_end"
                            style="@style/content_bold"/>

                        <LinearLayout
                            android:id="@+id/dialog_group_schedule_end_content_layout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/dialog_group_schedule_end_date_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="110dp"
                                android:text="@{PickerConverter.parseLongToDateText(viewModel.schedule.endLong)}"
                                android:textAlignment="center"
                                tools:text="2022.06.29 (수)"
                                style="@style/content_regular"/>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/main_text"
                                android:layout_marginVertical="2dp"
                                android:layout_marginHorizontal="10dp"/>

                            <TextView
                                android:id="@+id/dialog_group_schedule_end_time_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="80dp"
                                android:text="@{PickerConverter.parseLongToTimeText(viewModel.schedule.endLong)}"
                                android:textAlignment="center"
                                tools:text="12:00 PM"
                                style="@style/content_regular"/>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- MotionLayout -->
                    <androidx.constraintlayout.motion.widget.MotionLayout
                        android:id="@+id/dialog_group_schedule_start_date_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutDescription="@xml/activity_group_schedule_start_date_layout_scene">
                        <DatePicker
                            android:id="@+id/dialog_group_schedule_start_date_dp"
                            app:layout_constraintTop_toTopOf="parent"
                            style="@style/schedule_date_picker" />
                    </androidx.constraintlayout.motion.widget.MotionLayout>

                    <androidx.constraintlayout.motion.widget.MotionLayout
                        android:id="@+id/dialog_group_schedule_end_date_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutDescription="@xml/activity_group_schedule_end_date_layout_scene">
                        <DatePicker
                            android:id="@+id/dialog_group_schedule_end_date_dp"
                            app:layout_constraintTop_toTopOf="parent"
                            style="@style/schedule_date_picker"/>
                    </androidx.constraintlayout.motion.widget.MotionLayout>

                    <androidx.constraintlayout.motion.widget.MotionLayout
                        android:id="@+id/dialog_group_schedule_start_time_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutDescription="@xml/activity_group_schedule_start_time_layout_scene">
                        <TimePicker
                            android:id="@+id/dialog_group_schedule_start_time_tp"
                            app:layout_constraintTop_toTopOf="parent"
                            style="@style/schedule_time_picker"/>
                    </androidx.constraintlayout.motion.widget.MotionLayout>

                    <androidx.constraintlayout.motion.widget.MotionLayout
                        android:id="@+id/dialog_group_schedule_end_time_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutDescription="@xml/activity_group_schedule_end_time_layout_scene">
                        <TimePicker
                            android:id="@+id/dialog_group_schedule_end_time_tp"
                            app:layout_constraintTop_toTopOf="parent"
                            style="@style/schedule_time_picker" />
                    </androidx.constraintlayout.motion.widget.MotionLayout>

                    <LinearLayout
                        android:id="@+id/dialog_group_schedule_place_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/schedule_place"
                            style="@style/content_bold"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/dialog_group_schedule_place_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="8dp"
                            android:drawableEnd="@drawable/ic_arrow_right"
                            android:text="@{viewModel.schedule.placeName}"
                            tools:text="없음"
                            style="@style/content_regular"/>

                    </LinearLayout>

                    <com.kakao.vectormap.MapView
                        android:id="@+id/dialog_group_schedule_place_container"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:visibility="gone"
                        android:layout_marginTop="10dp"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/dialog_group_schedule_place_kakao_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="카카오맵으로 길찾기"
                        android:layout_marginTop="10dp"
                        android:visibility="gone"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/dialog_group_schedule_add_participant_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:paddingVertical="3dp"
                        android:drawableEnd="@drawable/ic_arrow_right"
                        android:text="@string/moim_schedule_add_participant"
                        style="@style/content_bold"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/dialog_group_schedule_participant_rv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:spanCount="3"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        tools:itemCount="4"
                        tools:listitem="@layout/item_moim_participant"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/dialog_group_schedule_look_invite_friend_schedule_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="36dp"
                        android:paddingVertical="12dp"
                        android:paddingHorizontal="20dp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:text="@string/moim_schedule_look_invite_friend_schedule"
                        android:drawablePadding="12dp"
                        android:drawableStart="@drawable/ic_calendar"
                        android:background="@drawable/bg_basic_outline_btn"
                        android:textColor="@color/black"
                        style="@style/content_regular"/>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/dialog_group_schedule_create_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="@{viewModel.schedule.moimScheduleId == 0L ? View.VISIBLE : View.GONE }"
                android:paddingTop="24dp"
                android:paddingBottom="30dp"
                android:textAlignment="center"
                android:background="@color/main"
                android:textColor="@color/white"
                android:text="@string/moim_schedule_new_moim_start"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/content_bold"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>