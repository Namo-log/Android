<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.NaMo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="materialThemeOverlay">@style/MaterialAlertDialog.App.Title.Text</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="ThemeOverlay.App.Button" parent="">
        <item name="colorPrimary">@color/main_gray</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>

    <!-- Number Picker 텍스트 색상 -->
    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@color/main_text</item>
    </style>

    <!-- 탭바 -->
    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="tabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/main_text</item>
    </style>

    <!-- 다이얼로그 -->
    <style name="TransparentDialogTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowIsFloating">false</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:colorBackground">@color/transparent</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/chip_select</item>
        <item name="android:textStyle">bold</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeColor">@color/chip_select</item>
        <item name="chipCornerRadius">100dp</item>
        <item name="chipStartPadding">30dp</item>
        <item name="chipEndPadding">30dp</item>
        <item name="chipMinHeight">35dp</item>
    </style>

    <!-- Text Style -->
    <style name="header">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/pretendard_bold</item>
    </style>

    <style name="content_bold">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="fontFamily">@font/pretendard_bold</item>
    </style>

    <style name="content_regular">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="fontFamily">@font/pretendard_regular</item>
    </style>

    <style name="subtext_14">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="fontFamily">@font/pretendard_regular</item>
    </style>

    <style name="subtext_12">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="fontFamily">@font/pretendard_regular</item>
    </style>
    
    <style name="dialog_header">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/pretendard_bold</item>
    </style>

    <style name="dialog_default_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/main_text</item>
    </style>

    <style name="dialog_underline">
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/text_unselected</item>
    </style>

    <style name="button_label">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="fontFamily">@font/pretendard_bold</item>
    </style>

    <style name="calendar_date">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="fontFamily">@font/pretendard_bold</item>
    </style>

    <style name="calendar_schedule">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="fontFamily">@font/pretendard_bold</item>
    </style>

    <!-- 카테고리 -->
    <style name="img_category_check">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/ic_check</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="category_cv">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="cardCornerRadius">25dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/main_pink</item>
    </style>

    <style name="category_setting_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 토글 -->
    <style name="category_toggle">
        <item name="thumbTint">@color/white</item>
        <item name="track">@drawable/selector_toggle_bg</item>
        <item name="android:thumb">@drawable/bg_toggle_thumb</item>
        <item name="android:enabled">true</item>
    </style>

    <style name="custom_setting_15sp_tv">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_right</item>
    </style>

    <style name="default_underline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/text_placeholder</item>
    </style>

    <!-- 다이얼로그 버튼 -->
    <style name="dialog_cancel_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bg_radius_5</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:backgroundTint">@color/main_gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="dialog_check_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bg_radius_5</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- 라디오 버튼 -->
    <style name="radio_btn" parent="content_regular">
        <item name="android:minHeight">0dp</item>
        <item name="android:drawableLeft">@drawable/selector_filter_radio</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- 검색 -->
    <style name="search_edit_text">
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColorHint">@color/text_placeholder</item>
        <item name="android:backgroundTint">@color/text_placeholder</item>
        <item name="android:maxLines">1</item>
        <item name="android:drawableLeft">@drawable/ic_search</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableTint">@color/text_placeholder</item>
    </style>
    <style name="search_btn">
        <item name="android:background">@drawable/bg_filter_btn</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="elevation">0dp</item>
    </style>
    <!-- 일정 -->
    <style name="empty_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">45dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/main_text</item>
    </style>

    <style name="schedule_empty_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:drawableStart">@drawable/ic_schedule_empty</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/text_disable</item>
        <item name="android:textSize">14sp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="schedule_date_picker">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:calendarTextColor">@color/black</item>
        <item name="android:calendarViewShown">false</item>
        <item name="android:datePickerMode">spinner</item>
        <item name="android:theme">@style/MyDatePicker</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="schedule_time_picker">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/MyDatePicker</item>
        <item name="android:timePickerMode">spinner</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="calendar_snackbar">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/pretendard_bold</item>
    </style>
    <style name="calendar_day_of_week_tv">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/text_unselected</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/pretendard_bold</item>
    </style>

</resources>